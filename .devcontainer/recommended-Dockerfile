FROM ubuntu:rolling

RUN apt-get update  \
	&& apt-get -y upgrade \
	&& apt-get install -y --no-install-recommends \
		apt-utils dialog git iproute2 procps lsb-release \
		build-essential \
		g++ \
		gdb \
		ninja-build \
		cmake \
		libboost-dev \
		valgrind  \
		clang-format \
	&& apt-get autoremove -y \
	&& apt-get clean -y

RUN mkdir -p /workspace/src /workspace/build
